{
  "manifest_version": 3,
  "name": "Owl20 - Beyond20 to Owlbear Bridge",
  "version": "1.0.0",
  "description": "Bridges Beyond20 dice roll data to Owlbear Rodeo iframes",
  "permissions": [
    "scripting"
  ],
  "host_permissions": [
    "https://www.owlbear.rodeo/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.owlbear.rodeo/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
